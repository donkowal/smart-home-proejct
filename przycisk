import subprocess
import tkinter as tk

def adb_command(cmd):
    full_cmd = f"adb shell {cmd}"
    result = subprocess.run(full_cmd, shell=True, capture_output=True, text=True)
    return result.stdout

def wlacz_wylacz():
    adb_command("input keyevent on/off")


root = tk.Tk()
root.title("Philips TV Control")
root.geometry("500x300")
btn_power = tk.Button(root, text="Włącz / Wyłącz TV", command=wlacz_wylacz, width=25, height=5)
btn_power.pack(padx=20, pady=20)

root.mainloop() 
